<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivityFragment">

    <!-- Color properties for parts of the calendar -->
    <com.imanoweb.calendarview.CustomCalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey"

        app:calendarBackgroundColor="@color/darkorange"
        app:calendarTitleTextColor="@color/black"
        app:titleLayoutBackgroundColor="@color/grey"

        app:selectedDayBackgroundColor="@color/grey"
        app:currentDayOfMonthColor="@color/black"

        app:dayOfMonthTextColor="@color/white"

        app:weekLayoutBackgroundColor="@color/black"
        app:dayOfWeekTextColor="@color/white"

        app:disabledDayBackgroundColor="@color/darkblue"
        app:disabledDayTextColor="@color/white"
        >
    </com.imanoweb.calendarview.CustomCalendarView>


</RelativeLayout>